<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="row">
  <div class="col-md-12">
    <div class="card-deck">
      <section class="card card-extend border-light">
        <div class="card-header border-light card-title">アカウント設定</div>
          <div class="card-body">
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.text_field :username, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: "名前" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "パスワード" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "パスワード（再入力)" %>
            </div>
            <div class="form-group">
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: "現在のパスワード" %>
            </div>
            <div class="form-submit">
              <%= link_to 'キャンセル' , account_path, class: "btn btn-light" %>
              <%= f.submit "変更する", class: "btn btn-primary" %>
            </div>
          </div>            
      </section>     
    </div> 
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="card-deck">
      <section class="card border-light">
        <div class="card-header border-light card-title">アカウント削除</div>
          <div class="card-body">
            <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'form-control' %>
          </div>
      </section>
    </div>
  </div>
</div>