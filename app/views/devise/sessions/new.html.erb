<div class="login">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
      <div class="form-logo-img">
        <%= link_to image_tag("cube_icon.png", width: 90), root_path, class: "logo-img" %>
      </div>
    　<h1 class="form-title">ログイン</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :次回から自動でログインする, class: "text-white" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-info btn-lg form-submit" %>
        </div>
      <% end %>
      <section class="card card-extend border-light">
        <div class="row">
          <div class="col-md-6 testuser">
            <p>テスト用メールアドレス</p>
            <p>testcuber@gmail.com</p>
          </div>
          <div class="col-md-6 testuser">
            <p>テスト用パスワード</p>
            <p>testuser</p>
          </div>    
        </div>
      </section>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

