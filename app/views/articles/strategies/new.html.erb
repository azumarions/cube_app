<div class="row">
  <div class="col">
    <div class="card-deck">
      <section class="card card-extend border-light">
        <div class="card-header border-light card-title">新規作成</div>
          <div class="card-body">
            <%= form_with(model: @article, url: article_strategies_path, local: true) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="form-group">
                <%= f.text_area :title, autofocus: true, class: 'form-control article-title', placeholder: "タイトル" %>
              </div>
              <div class="form-group">
                <%= f.text_area :content, class: 'form-control article-content', placeholder: "コンテンツ" %>
              </div>
              <div class="submit_form">
                <div class="row">
                  <div class="col-6  btn-ar">
                    <%= link_to 'キャンセル' , article_path, class: "btn btn-light form-control" %>
                  </div>
                  <div class="col-6  btn-ar">
                    <%= f.submit "作成する", class: "btn btn-info form-control" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
      </section>
    </div>
  </div>
</div>