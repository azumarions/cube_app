<div class"microposts-index">
  <% if @microposts.any? %>
    <ul class="list-unstyled">
      <% @microposts.each do |micropost| %>
        <div class="media mb-4">
        <li id="micropost-<%= micropost.id %>" data-micropost-id="<%= micropost.id %>">    
          　<%= image_tag micropost.user.profile.avatar.to_s, :id => "align-self-center" %>
          <div class="media-body">   
          　<h5><%= link_to micropost.user.username, micropost.user, class: "users-name text-white" %></h5>
          　<p><%= micropost.comment %></p>
          　<% if micropost.picture.attached? %>
              <div class="log-picture">
              <%= image_tag micropost.resize_picture %>
              </div>
            <% end %>
            <%= render "likes/like", micropost: micropost %>
          　<% if current_user?(micropost.user) %>
          　　<%= link_to "削除", micropost, method: :delete,
                                          data: { confirm: "削除しますか？" }, :class => "btn btn-sm btn-danger" %>
          　<% end %>
          </div>     
        </li>
        </div>
      <% end %>
    </ul>
  <%= paginate @microposts %>
  <% else %>
    <span>まだ投稿がありません</span>
  <% end %>
</div>