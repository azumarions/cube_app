<!DOCTYPE html>
<html>
  <head>
    <title>Ruber</title>
    <%= render 'layouts/rails_default' %>
  </head>

  <body class="drawer drawer--left">  
    <%= render 'layouts/header' %>
    
    <main role="main">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <% if user_signed_in? %>
        <div class="container">
          <%= yield %>
        <div>
      <% else %>
        <%= yield %>
      <% end %>
      
    </main>

    <script>
    $(document).ready(function() {
      $('.drawer').drawer();
    });
    </script>
  </body>
</html>
