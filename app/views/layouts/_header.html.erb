<header role="banner">
  <div class="navbar navbar-dark fixed-top navbar-extend">
    <button type="button" class="drawer-toggle drawer-hamburger">
      <span class="sr-only">toggle navigation</span>
      <span class="drawer-hamburger-icon"></span>
    </button>
    <%= link_to "Ruber", root_path, class: "rlogo" %>
    <nav class="drawer-nav" role="navigation">    
      <ul class="drawer-menu">
          <li><%= link_to "Ruber", root_path, id: "logo", class: "drawer-brand" %></li>
        <% if user_signed_in? %>
          <li class="drawer-menu-item"><i class="fas fa-user my-yellow fa-icon"></i><%= link_to current_user.username, pages_show_path %></li>                     
          <li class="drawer-menu-item"><i class="fas fa-crown my-darkgoldenrod fa-icon"></i><%= link_to 'ランキング', clocks_rank_path %></li>
          <li class="drawer-menu-item"><i class="fas fa-users my-red fa-icon"></i><%= link_to 'ユーザー', users_path %></li>
