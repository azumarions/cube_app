          <li><%= link_to 'サインアップ', new_user_registration_path, class: "drawer-menu-item" %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: "drawer-menu-item" %></li>
          <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "drawer-menu-item", method: :post %></li>
          <li><%= link_to 'お問い合わせ', pages_contact_path, class: "drawer-menu-item" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
