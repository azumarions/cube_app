          <li class="drawer-menu-item"><i class="far fa-clock my-blue fa-icon"></i><%= link_to "タイマー", new_clock_path %></li>
          <li class="drawer-menu-item"><i class="fas fa-hourglass-start my-cyan fa-icon"></i><%= link_to '計測履歴', clocks_path %></li>
          <li class="drawer-menu-item"><i class="fas fa-user-edit my-gray fa-icon"></i><%= link_to '設定', account_path %></li>
