<div class="user_info">
  <div class="row">
    <div class="col">
      <section class="user_show">
        <div class="row">
          <div class="col-md-1">
          </div>
          <div class="col-5 col-md-3">
            <div class="circle-avatar">
              <% if @user.profile.avatar? %>
                <%= image_tag @user.profile.avatar.to_s, class: "float-center border mb-2 mx-auto" %>
              <% else %>
                <%= image_tag 'no_avatar.png', class: "float-center border mb-2 mx-auto" %> 
              <% end %>
            </div>
          </div>
          <div class="col-6 col-md-8">
            <div class="row">
              <div class="col-12">
                <h3 class="text-white"><%= @user.username %></h3>
              </div>
              <div class="col-12">
                <%= render 'users/follow_form' if user_signed_in? %>
              </div>
            </div>
          </div>
          <div class="col-md-1">
          </div>
          <div class="col-md-5">
            <section class="stats">
              <%= render 'shared/stats' %>
            </section>
          </div>
        </div>
      </section>     
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-11 col-md-8">
          <% if @user.profile.description? %>
            <p class="text-white"><%= safe_join(@user.profile.description.split("\n"),tag(:br)) %></p>
          <% end %>
        </div>
      </div>
      <% if @micropost_feed_items.any? %>
        <div class="microposts">
          <%= render @micropost_feed_items %>
        </div>
        <%= paginate @micropost_feed_items, params: { controller: :users, action: :show } %>
      <% else %>
        <p class="text-white">まだ投稿がありません</p>
      <% end %> 
    </div>
  </div>
</div>