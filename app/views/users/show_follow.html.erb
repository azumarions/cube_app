<div class="row">
  <div class="col-1">
  </div>
  <div class="col-10">
    <section class="stats"> 
      <%= render 'shared/stats' %>
    </section>
    <div class="input-group">
      <%= search_form_for @search do |f| %>
        <%= f.search_field :username_cont, placeholder: 'ユーザー名', class: "search-name" %>
        <%= f.submit "検索", class: "btn btn-info" %>
      <% end %>
    </div>
    <% if @users.any? %>
      <ul class="users follow">
      <% @users.each do |user| %>
        <li>
          <div class="users-avatar">
            <% if user.profile.avatar? %>
              <%= image_tag user.profile.avatar.to_s, class: "float-center border mb-2 mx-auto" %>
            <% else %>
              <%= image_tag 'no_avatar.png', class: "float-center border mb-2 mx-auto" %> 
            <% end %>  
            <%= link_to user.username, user, class: "users-name text-white" %>
          </div>
        </li>
      <% end %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>